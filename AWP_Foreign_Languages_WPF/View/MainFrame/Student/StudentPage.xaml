<Page x:Class="AWP_Foreign_Languages_WPF.View.MainFrame.Students.StudentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AWP_Foreign_Languages_WPF.View.MainFrame.Students"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StudentPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox>
            <ListBoxItem Selected="ListBoxItemAllLessons_Selected" Margin="0 2" Foreground="#9D9D9D">
                <TextBlock Text="Все посещения"/>
            </ListBoxItem>
            <ListBoxItem Selected="ListBoxItemMonthLessons_Selected" Margin="0 2" Foreground="#9D9D9D">
                <StackPanel>
                    <TextBlock Text="Занятия в"/>
                    <TextBlock Text="текущем месяце"/>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem Selected="ListBoxItemHomeworks_Selected" Margin="0 2" Foreground="#9D9D9D">
                <TextBlock Text="Домашние задания"/>
            </ListBoxItem>
        </ListBox>
        <Frame x:Name="PersonalFrame" Grid.Column="1"/>
    </Grid>
</Page>
