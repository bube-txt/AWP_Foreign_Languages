<Page x:Class="AWP_Foreign_Languages_WPF.View.MainFrame.Teachers.TeacherPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AWP_Foreign_Languages_WPF.View.MainFrame.Teachers"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TeacherPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox>
            <ListBoxItem Selected="ListBoxLessons_Selected" Margin="0 2">
                <TextBlock Text="Задания"/>
            </ListBoxItem>
            <ListBoxItem Selected="ListBoxItemMessages_Selected" Margin="0 2">
                <TextBlock Text="Сообщения"/>
            </ListBoxItem>
        </ListBox>
        <Frame x:Name="PersonalFrame" Grid.Column="1"/>
    </Grid>
</Page>
